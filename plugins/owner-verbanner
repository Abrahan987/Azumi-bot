// Comando para ver el banner actual del menÃº
// Guardar como: plugins/owner-verbanner.js

let handler = async (m, { conn }) => {
    try {
        let bannerUrl = global.db.data.settings?.menuBanner || 'No hay banner establecido';

        if (bannerUrl === 'No hay banner establecido') {
            return m.reply(`â„¹ï¸ *No hay banner configurado*

Para establecer uno usa:
â€¢ .setbanner <url de imagen>`);
        }

        await conn.sendMessage(m.chat, {
            image: { url: bannerUrl },
            caption: `ğŸ–¼ï¸ *Banner actual del menÃº*

ğŸ”— *URL:*
${bannerUrl}

ğŸ’¡ Para cambiarlo usa:
â€¢ .setbanner <nueva url>`
        }, { quoted: m });

    } catch (error) {
        console.error('Error al mostrar banner:', error);
        await m.reply('âŒ Error al cargar el banner. La URL podrÃ­a ser invÃ¡lida.');
    }
};

handler.help = ['verbanner'];
handler.tags = ['owner'];
handler.command = /^(verbanner|vericono)$/i;

export default handler;
